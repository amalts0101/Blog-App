<div>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
<table>
  <h1>Blog Posts</h1>
  <% @posts.each do |post| %>
  <tr>
  <div class="card mb-4">
    <h3><%= post.title %></h3>
    <p class = "lead">by
    <%= post.user.email %> 
    </p>
