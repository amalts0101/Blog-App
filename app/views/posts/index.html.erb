<h1>Listing Posts</h1>
 
<table border="5px">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Show Post</th>
    <th>Edit Post</th>
    <th>Delete Post</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <%if user_signed_in?%> 
        <%if post.user_id == current_user.id%>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete?' } %></td>
        <%end%>
      <%end%>
    </tr>
  <% end %>
</table>

<%= link_to 'New Post', new_post_path %>

<%= link_to 'My Blog', controller: 'posts' %>
